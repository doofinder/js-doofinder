{
  "name": "doofinder",
  "version": "6.0.0",
  "description": "Javascript Library for Doofinder Search API",
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "browser": "lib/doofinder.min.js",
  "engines": {
    "node": ">=10.15.0"
  },
  "files": [
    "lib",
    "types"
  ],
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "types": "lib/doofinder.d.ts",
  "repository": "git@github.com:doofinder/js-doofinder.git",
  "scripts": {
    "dev": "es-dev-server --node-resolve --open /playground/",
    "dev:compat": "es-dev-server --node-resolve --compatibility esm --open /playground/",

    "lint": "eslint --env browser --fix src/**/*.ts",
    "compile": "rimraf lib && rollup -c",
    "minify-iife": "terser lib/doofinder.js -c -m --comments /^nothing/ --keep-classnames --keep-fnames -o lib/doofinder.min.js",
    "typings": "rimraf types && tsc --declaration --declarationMap --emitDeclarationOnly --outDir types && api-extractor run --local",

    "build": "yarn lint && yarn compile && yarn minify-iife && yarn typings",
    "docs": "api-documenter markdown -i ./temp -o ./docs",

    "test": "export TS_NODE_PROJECT=tsconfig.test.json ; mocha --reporter spec --require ts-node/register \"test/**/*.ts\""
  },
  "author": "Doofinder",
  "contributors": [
    "Carlos Escribano Rey <carlos@doofinder.com>",
    "Jos√© Carlos Cuevas Albadalejo <josecarlos@doofinder.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/doofinder/js-doofinder/issues"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --env browser --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "homepage": "https://github.com/doofinder/js-doofinder",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@microsoft/api-documenter": "^7.7.12",
    "@microsoft/api-extractor": "^7.7.8",
    "@types/chai": "^4.2.3",
    "@types/chai-as-promised": "^7.1.2",
    "@types/fetch-mock": "^7.3.2",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "es-dev-server": "^1.18.4",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "fetch-mock": "^9.1.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.2",
    "mocha": "^6.2.1",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.22.0",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-inject": "^3.0.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.24.3",
    "terser": "^4.3.9",
    "ts-node": "^8.4.1",
    "typedoc": "^0.15.0",
    "typescript": "3.7.2"
  },
  "dependencies": {
    "node-fetch": "^2.6.0",
    "qss": "^2.0.3"
  }
}
